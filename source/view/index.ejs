</html>

<script>
    var logoutConfirmation = "Are you sure you want to log out?";
	
    $("#logout").on
	(
		"click",
		function(event)
		{
            Cookies.remove('token');
            location.reload();
		}
	);
	
    $(".login-button").on
	(
		"click",
		function(event)
		{
			console.log ( "Login button pressed." );
		}
	);
</script>

